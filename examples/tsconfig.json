{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
    "skipLibCheck": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
    "allowJs": true,
		"lib": [
			"esnext",
			"dom"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue"
	]
}
